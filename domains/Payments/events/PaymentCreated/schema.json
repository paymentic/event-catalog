{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "checkout": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "idempotenceKey": {
          "type": "string"
        },
        "buyerInfo": {
          "type": "object",
          "properties": {
            "document": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": [
            "document",
            "name"
          ]
        },
        "cardInfo": {
          "type": "object",
          "properties": {
            "cardInfo": {
              "type": "string"
            },
            "token": {
              "type": "string"
            }
          },
          "required": [
            "cardInfo",
            "token"
          ]
        }
      },
      "required": [
        "id",
        "idempotenceKey",
        "buyerInfo",
        "cardInfo"
      ]
    },
    "payments": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "amount": {
              "type": "string"
            },
            "currency": {
              "type": "string"
            },
            "idempotenceKey": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "sellerInfo": {
              "type": "object",
              "properties": {
                "sellerId": {
                  "type": "string"
                }
              },
              "required": [
                "sellerId"
              ]
            }
          },
          "required": [
            "id",
            "amount",
            "currency",
            "status",
            "sellerInfo",
            "idempotenceKey"
          ]
        }
      ]
    }
  },
  "required": [
    "checkout",
    "payments"
  ]
}